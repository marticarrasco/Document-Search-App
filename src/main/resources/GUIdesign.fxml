<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefHeight="699.0" prefWidth="762.0" fx:controller="DocumentSearchController">
    <children>
        <TextArea fx:id="previewArea" layoutX="26.0" layoutY="140.0" prefHeight="537.0" prefWidth="284.0" />
        <TextArea fx:id="logArea" layoutX="332.0" layoutY="140.0" prefHeight="537.0" prefWidth="404.0" />
        <Button fx:id="btnSelectFile" layoutX="447.0" layoutY="29.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Seleccionar" onAction="#selectFile"/>
        <Label fx:id="lblSelectedFile" layoutX="26.0" layoutY="33.0" prefHeight="17.0" prefWidth="411.0" text="Selecciona el fichero con el listado de documentos a buscar" />
        <Button fx:id="btnStartSearch" layoutX="557.0" layoutY="101.0" mnemonicParsing="false" text="Empezar a buscar documentos" onAction="#startSearch"/>
        <Label layoutX="590.0" layoutY="25.0" prefHeight="17.0" prefWidth="146.0" text="by Martí Carrasco Martínez" />
        <Button fx:id="btnSelectSearchDirectory" layoutX="447.0" layoutY="65.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Seleccionar" onAction="#selectSearchDirectory"/>
        <Label fx:id="lblSearchDirectory" layoutX="26.0" layoutY="69.0" prefHeight="17.0" prefWidth="411.0" text="Selecciona el directorio donde buscar los documentos" />
        <Button fx:id="btnSelectTargetDirectory" layoutX="447.0" layoutY="101.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Seleccionar" onAction="#selectTargetDirectory"/>
        <Label fx:id="lblTargetDirectory" layoutX="26.0" layoutY="105.0" prefHeight="17.0" prefWidth="411.0" text="Selecciona el directorio donde guardar los documentos encontrados" />
    </children>
</AnchorPane>
